---
import "../styles/css/components-Navbar.css";

let { current_url = "/" } = Astro.props;

if (
  current_url == "http://localhost:4321/favorite/" ||
  current_url == "http://localhost:4321/user/"
) {
  current_url = "/";
}
---

<script src="../scripts/Navbar.ts"></script>

<div class="container-Navbar">
  <!-- DISCOVERY BUTTON -->
  <a href={current_url}>
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="35"
      height="35"
      viewBox="0 0 24 24"
      ><path
        fill="#d2f1f9"
        d="M14.19 14.19L6 18l3.81-8.19L18 6m-6-4A10 10 0 0 0 2 12a10 10 0 0 0 10 10a10 10 0 0 0 10-10A10 10 0 0 0 12 2m0 8.9a1.1 1.1 0 0 0-1.1 1.1a1.1 1.1 0 0 0 1.1 1.1a1.1 1.1 0 0 0 1.1-1.1a1.1 1.1 0 0 0-1.1-1.1Z"
      ></path></svg
    >
    <p>Manga</p>
  </a>

  <!-- FAVORITE BUTTON -->
  <a href="/favorite/">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="35"
      height="35"
      viewBox="0 0 24 24"
      ><path
        fill="#d2f1f9"
        d="M17 3H7c-1.1 0-2 .9-2 2v16l7-3l7 3V5c0-1.1-.9-2-2-2z"></path></svg
    >
    <p>Favorit</p>
  </a>

  <!-- ACCOUNT BUTTON -->
  <a href="/user/">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="35"
      height="35"
      viewBox="0 0 24 24"
